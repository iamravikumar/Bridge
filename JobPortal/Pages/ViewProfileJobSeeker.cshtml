@page
@model JobPortal.Pages.ViewProfileJobSeekerModel
@{
    ViewData["Title"] = "View  Profile";
}
<br />
<div class="row text-center">
    <div class="col-lg-2 col-md-2 col-xs-4 col-sm-4 col-lg-offset-5 col-md-offset-5 col-sm-offset-4 col-xs-offset-4 text-center">
        <a href="@Model.CurrentJobSeeker.Industry"><img src="@Model.CurrentJobSeeker.Industry" alt="Profile Pic" class="img-rounded img-responsive"></a>
    </div>
</div>

<h2 class="text-center">@Model.CurrentJobSeeker.FirstName @Model.CurrentJobSeeker.LastName</h2>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-center">
        <p style="font-style:italic;color:#333333;">@Model.CurrentJobSeeker.JobRole | @Model.CurrentJobSeeker.CurrentLocation</p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Email ID: <small>@Model.CurrentJobSeeker.EmailID</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Phone Number: <small>@Model.CurrentJobSeeker.MobileNumber</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Bio: <small>@Model.CurrentJobSeeker.ShortBio</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Work Experience: <small>@Model.CurrentJobSeeker.TotalExperience</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Key Skills: <small>@Model.CurrentJobSeeker.KeySkills</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Job Role: <small>@Model.CurrentJobSeeker.JobRole</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Desired Job Location: <small>@Model.CurrentJobSeeker.JobLocation</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Qualification: <small>@Model.CurrentJobSeeker.HighestQualification @Model.CurrentJobSeeker.HighestQualificationSubject</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>College: <small>@Model.CurrentJobSeeker.HighestQualificationCollege</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Achivements: <small>@Model.CurrentJobSeeker.Achivements</small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>LinkedIn Profile: <small><a href="@Model.CurrentJobSeeker.LinkedInLink">@Model.CurrentJobSeeker.LinkedInLink</a></small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Website Link: <small><a href="@Model.CurrentJobSeeker.WebsiteLink">@Model.CurrentJobSeeker.WebsiteLink</a></small></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-justify">
        <h4>Resume Link: <small><a href="@Model.CurrentJobSeeker.ResumeLink" target="_blank">View Resume</a></small></h4>
    </div>
</div>