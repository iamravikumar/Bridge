@page
@model JobPortal.Pages.JobSeekerEditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
}

@if (User.Identity.IsAuthenticated)
{
    <h1 class="text-center" style="font-family:'Comic Sans MS';">Edit Profile</h1>
    <p class="text-center" style="font-family:'Comic Sans MS';">JobSeeker</p>
    <hr />

    <div class="row text-center">
        <div class="col-lg-2 col-md-2 col-xs-4 col-sm-4 col-lg-offset-5 col-md-offset-5 col-sm-offset-4 col-xs-offset-4 text-center">
            <a href="@Model.CurrentJobSeeker.Industry"><img src="@Model.CurrentJobSeeker.Industry" alt="Profile Pic" class="img-rounded img-responsive"></a>

        </div>
    </div>
    <br />
    <div class="row text-center">
        <div class="col-lg-2 col-md-2 col-xs-4 col-sm-4 col-lg-offset-5 col-md-offset-5 col-sm-offset-4 col-xs-offset-4 text-center">
            <button type="button" class="btn btn-sm" data-toggle="modal" data-target="#myModal1">Upload Pic</button>
            <!-- Modal1 -->
            <div class="modal fade" id="myModal1" role="dialog" style="background-color:#ecf0f1;">
                <div class="modal-dialog" style="background-color:#ecf0f1;">
                    <div class="modal-content" style="background-color:#ecf0f1;">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Upload Pic</h4>
                        </div>
                        <div class="modal-body text-center">
                            <form asp-page="/UploadPic" method="post" enctype="multipart/form-data" class="form-inline">
                                <input type="file" accept="image/*" name="file" class="btn btn-sm" />
                                <button type="submit" class="btn btn-sm">Upload Pic</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="row text-center">
        <div class="col-lg-6 col-md-6 col-xs-12 col-sm-12 col-lg-offset-3 col-md-offset-3 text-center">
            <a class="btn btn-sm" href="@Model.CurrentJobSeeker.ResumeLink" style="background-color:ButtonFace;color:#444444;" target="_blank">View Resume</a>
            <button type="button" class="btn btn-sm" data-toggle="modal" data-target="#myModal2">Upload Resume</button>
            <!-- Modal2 -->
            <div class="modal fade" id="myModal2" role="dialog" style="background-color:#ecf0f1;">
                <div class="modal-dialog" style="background-color:#ecf0f1;">
                    <div class="modal-content" style="background-color:#ecf0f1;">
                        <div class="modal-header" style="background-color:#ecf0f1;">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Upload Resume</h4>
                        </div>
                        <div class="modal-body" style="background-color:#ecf0f1;">
                            <form asp-page="/UploadCV" method="post" enctype="multipart/form-data" class="form-inline">
                                <input type="file" name="file" class="btn btn-sm" />
                                <button type="submit" class="btn btn-sm">Upload Resume</button>
                            </form>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <p class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1" style="font-weight:bold;">Personal Details:</p>
    </div>

    <form method="post">
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-2 col-md-offset-2 text-danger"></div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group ">
                <label asp-for="CurrentJobSeeker.FirstName" style="font-weight:normal;">First Name:</label>
                <input type="text" class="form-control" asp-for="CurrentJobSeeker.FirstName" disabled />
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 form-group col-lg-offset-1 col-md-offset-1">
                <label asp-for="CurrentJobSeeker.LastName" style="font-weight:normal;">Last Name:</label>
                <input type="text" class="form-control" asp-for="CurrentJobSeeker.LastName" disabled />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group ">
                <label asp-for="CurrentJobSeeker.EmailID" style="font-weight:normal;">Email ID:</label>
                <input type="text" class="form-control" asp-for="CurrentJobSeeker.EmailID" disabled />
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 form-group col-lg-offset-1 col-md-offset-1">
                <label asp-for="CurrentJobSeeker.MobileNumber" style="font-weight:normal;">Mobile No.   :</label>
                <input type="text" class="form-control" asp-for="CurrentJobSeeker.MobileNumber" disabled />
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">
                <label asp-for="CurrentJobSeeker.CurrentLocation" style="font-weight:normal;">Your Current Location:</label>
                <select asp-for="CurrentJobSeeker.CurrentLocation" class="form-control" style="background-color:#ecf0f1;">
                    <option value="Banglore">Banglore</option>
                    <option value="Chennai">Chennai</option>
                    <option value="Darbhanga">Darbhanga</option>
                    <option value="Goa">Goa</option>
                    <option value="Gonda">Gonda</option>
                    <option value="Greater Noida">Greater Noida</option>
                    <option value="Gurugram">Gurugram</option>
                    <option value="Hyderabad">Hyderabad</option>
                    <option value="Kashipur">Kashipur</option>
                    <option value="Kolkata">Kolkata</option>
                    <option value="Lucknow">Lucknow</option>
                    <option value="Mumbai">Mumbai</option>
                    <option value="New Delhi">New Delhi</option>
                    <option value="Rewari">Rewari</option>
                </select>
                <span asp-validation-for="CurrentJobSeeker.CurrentLocation" class="text-danger"></span>


            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">
                <label asp-for="CurrentJobSeeker.JobLocation" style="font-weight:normal;">Desired Work Locations:<small>(Seprated By Commas)</small></label>
                <input type="text" class="form-control" asp-for="CurrentJobSeeker.JobLocation" required style="background-color:#ecf0f1;"/>
                <span asp-validation-for="CurrentJobSeeker.JobLocation" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group ">
                <label asp-for="CurrentJobSeeker.LinkedInLink" style="font-weight:normal;">LinkedIn Profile Url:</label>
                <input type="url" asp-for="CurrentJobSeeker.LinkedInLink" class="form-control" style="background-color:#ecf0f1;"/>
                <span asp-validation-for="CurrentJobSeeker.LinkedInLink" class="text-danger"></span>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">
                <label asp-for="CurrentJobSeeker.WebsiteLink" style="font-weight:normal;">Your Website Url:</label>
                <input type="url" class="form-control" asp-for="CurrentJobSeeker.WebsiteLink" style="background-color:#ecf0f1;"/>
                <span asp-validation-for="CurrentJobSeeker.WebsiteLink" class="text-danger"></span>
            </div>
        </div>

        <br />
        <div class="row">
            <p class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1" style="font-weight:bold;">Qualification Details:</p>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">
                <label asp-for="CurrentJobSeeker.HighestQualification" style="font-weight:normal;">Degree:</label>
                <select asp-for="CurrentJobSeeker.HighestQualification" class="form-control" style="background-color:#ecf0f1;">
                    <option value="B.Tech">B.Tech</option>
                    <option value="B.Arch">B.Arch</option>
                    <option value="B.Sc">B.Sc</option>
                    <option value="B.Com">B.Com</option>
                    <option value="B.A">B.A</option>
                    <option value="M.Tech">M.Tech</option>
                    <option value="M.Sc">M.Sc</option>
                    <option value="M.Arch">M.Arch</option>
                    <option value="M.Com">M.Com</option>
                    <option value="M.A">M.A</option>
                    <option value="B.Ed">B.Ed</option>
                </select>
                <span asp-validation-for="CurrentJobSeeker.HighestQualification" class="text-danger"></span>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">
                <label asp-for="CurrentJobSeeker.HighestQualificationSubject" style="font-weight:normal;">Degree Subject:</label>
                <input type="text" class="form-control" asp-for="CurrentJobSeeker.HighestQualificationSubject" required style="background-color:#ecf0f1;"/>
                <span asp-validation-for="CurrentJobSeeker.HighestQualificationSubject" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">
                <label asp-for="CurrentJobSeeker.HighestQualificationCollege" style="font-weight:normal;">College:</label>
                <input type="text" class="form-control" asp-for="CurrentJobSeeker.HighestQualificationCollege" required style="background-color:#ecf0f1;"/>
                <span asp-validation-for="CurrentJobSeeker.HighestQualificationCollege" class="text-danger"></span>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">

                @*<label asp-for="CurrentJobSeeker.HighestQualificationCompletionTime" style="font-weight:normal;">Degree Completion Date:</label>
                    <input type="date" asp-for="CurrentJobSeeker.HighestQualificationCompletionTime" class="form-control" value="@DateTime.Now.Date" />
                    <span asp-validation-for="CurrentJobSeeker.HighestQualificationCompletionTime" class="text-danger"></span>*@
            </div>
        </div>

        <br />
        <div class="row">
            <p class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1" style="font-weight:bold;">Work Details:</p>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group ">
                <label asp-for="CurrentJobSeeker.JobRole" style="font-weight:normal;">Job Roles You Are Interested In: <small>(Seprated By Commas)</small></label>
                <input type="text" asp-for="CurrentJobSeeker.JobRole" class="form-control" required style="background-color:#ecf0f1;"/>
                <span asp-validation-for="CurrentJobSeeker.JobRole" class="text-danger"></span>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">
                <label asp-for="CurrentJobSeeker.KeySkills" style="font-weight:normal;">Your Key Skills: <small>(Seprated By Commas)</small></label>
                <input type="text" class="form-control" asp-for="CurrentJobSeeker.KeySkills" required style="background-color:#ecf0f1;"/>
                <span asp-validation-for="CurrentJobSeeker.KeySkills" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group ">
                <label asp-for="CurrentJobSeeker.TotalExperience" style="font-weight:normal;">Experience In Current Industry: <small>(In Years)</small></label>
                <input type="number" asp-for="CurrentJobSeeker.TotalExperience" class="form-control" required style="background-color:#ecf0f1;"/>
                <span asp-validation-for="CurrentJobSeeker.TotalExperience" class="text-danger"></span>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">

            </div>
        </div>

        <div class="row">
            <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group ">
                <label asp-for="CurrentJobSeeker.ShortBio" style="font-weight:normal;">Short Bio About You: </label>
                <textarea asp-for="CurrentJobSeeker.ShortBio" class="form-control" rows="3" required style="background-color:#ecf0f1;"></textarea>
                <span asp-validation-for="CurrentJobSeeker.ShortBio" class="text-danger"></span>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">

            </div>
        </div>

        <div class="row">
            <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group ">
                <label asp-for="CurrentJobSeeker.Achivements" style="font-weight:normal;">Your Achivements: </label>
                <textarea asp-for="CurrentJobSeeker.Achivements" class="form-control" rows="6" style="background-color:#ecf0f1;"></textarea>
                <span asp-validation-for="CurrentJobSeeker.Achivements" class="text-danger"></span>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12 col-lg-offset-1 col-md-offset-1 form-group">

            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">

                <input type="submit" class="btn " value="Save Changes" style="background-color:#34495e;color:#FFFFFF;"/>

            </div>
        </div>
    </form>
    <br />
    <br />

}
else
{

    <h2 class="text-center">Edit Profile</h2>
    <hr />
    <br />
    <br />
    <p class="text-danger text-center">You Can Edit Profile Only If You Are Logged In.</p>
    <br />
    <div class="text-center">
        <a class="btn btn-default" asp-page="/JobseekerLogin">Login</a>
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}