@page
@model JobPortal.Pages.JobseekerLoginModel
@{
    ViewData["Title"] = "Login";
}
<h1 class="text-center" style="font-family:'Comic Sans MS';">Log In</h1>
<p class="text-center" style="font-family:'Comic Sans MS';">JobSeeker</p>
<hr />
<br />
<br />
<form method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-2 col-md-offset-2 text-danger"></div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
            <label asp-for="LoginInput.EmailId">Email ID:</label>
            <input type="text" class="form-control" asp-for="LoginInput.EmailId" style="background-color:#ecf0f1;"/>
            <span asp-validation-for="LoginInput.EmailId" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 col-lg-offset-4 col-md-offset-4 form-group">
            <label asp-for="LoginInput.Password">Password:</label>
            <input type="password" class="form-control" asp-for="LoginInput.Password" style="background-color:#ecf0f1;"/>
            <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">

            <input type="submit" class="btn " value="Login" style="background-color:#34495e;color:#FFFFFF;"/>

        </div>
    </div>
</form>
<br />
<br />

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}